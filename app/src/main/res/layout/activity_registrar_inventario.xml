<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.victor.taller5_eam_sqlite.vista.RegistrarInventarioActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Ingresar inventario"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="13dp"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/campoImei"
            android:layout_height="wrap_content"
            android:hint="IMEI Celular"/>

        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/spinnerMarcar"
            android:layout_height="wrap_content">
        </Spinner>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/campoNombre"
            android:hint="Nombre Celular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:text="Guardar"
            android:id="@+id/btnGuardar"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="Buscar"
            android:id="@+id/btnBuscar"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:text="Eliminar"
            android:id="@+id/btnEliminar"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:text="Modificar"
            android:id="@+id/btnModificar"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:text="Listar"
            android:id="@+id/btnListar"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
