<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".vista.RegistrarMarcarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/background_light"
            android:text="Registrar tu marca" />

        <EditText
            android:id="@+id/txtNombreMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:hint="Nombre de la marca"
            android:backgroundTint="#fff"
            android:textColorHint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/txtDescripcionMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:hint="Descripcion"
            android:backgroundTint="#fff"
            android:textColorHint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:id="@+id/btnGuardarMarca"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:onClick="guardar"
            android:layout_marginTop="40dp"
            android:background="@drawable/borde_redondo"
            android:textColor="@android:color/background_light"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Guardar" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>