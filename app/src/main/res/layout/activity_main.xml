<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".vista.MainActivity">

    <TextView
        android:id="@+id/txtBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="43dp"
        android:text="Â¡Bienvenido!"
        android:layout_marginTop="22dp"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnRegistrarMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde_redondo"
            android:onClick="onclick"
            android:text="Registrar marca celular"
            android:textColor="@android:color/background_light"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnNuevoIngresoInventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde_redondo"
            android:onClick="onclick"
            android:text="Nuevo registro inventario"
            android:textColor="@android:color/background_light"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnListarInventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borde_redondo"
            android:onClick="onclick"
            android:text="Ver listado inventario"
            android:textColor="@android:color/background_light"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
